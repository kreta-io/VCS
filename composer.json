{
    "name": "kreta/vcs",
    "description": "Kreta vcs component",
    "keywords": [
        "project",
        "manager",
        "development",
        "tool",
        "vcs",
        "component"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                      ">=5.4",
        "kreta/issue":              "^0.4.0",
        "symfony/event-dispatcher": "^2.7"
    },
    "require-dev": {
        "fabpot/php-cs-fixer":      "^1.10",
        "mmoreram/php-formatter":   "^1.0",
        "phpspec/phpspec":          "^2.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSUserBundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kreta/Finite"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSOAuthServerBundle"
        }
    ],
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-cs-fixer fix --config-file=.phpspec_cs",
            "php-formatter f:h:f src",
            "php-formatter f:h:f spec",
            "php-formatter f:u:s src",
            "php-formatter f:u:s spec"
        ],
        "test": "phpspec run"
    },
    "autoload": {
        "psr-4": {
            "Kreta\\Component\\VCS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Kreta\\Component\\VCS\\": "spec/"
        }
    }
}
